rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para la colección de usuarios
    match /usuarios/{userId} {
      // Los usuarios pueden leer y escribir solo sus propios datos
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regla temporal para desarrollo - eliminar en producción
    match /{document=**} {
      // Esta regla permite acceso temporal hasta septiembre 2025
      // TODO: Configurar reglas específicas para cada colección
      allow read, write: if request.auth != null && request.time < timestamp.date(2025, 9, 12);
    }
  }
}
